{
  "ConnectionStrings": {
    "Database": "Host=bookmaster.database;Port=5432;Database=bookmaster;Username=postgres;Password=postgres;Include Error Detail=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:4200" ]
  },
  "Authentication": {
    "Audience": "account",
    "TokenValidationParameters": {
      "ValidIssuers": [ "http://bookmaster.identity:8080/realms/bookmaster", "http://localhost:18070/realms/bookmaster" ]
    },
    "MetadataAddress": "http://bookmaster.identity:8080/realms/bookmaster/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "KeyCloak": {
    "HealthUrl": "http://bookmaster.identity:9007/health/"
  }
}
